if test $# -lt 1; then
  /usr/bin/logger -p daemon.err -t %%PORTNAME%%/enable_sim "not enough arguments"
  exit 1
fi

driver="$1"
shift 1

cd $(/usr/bin/dirname "$0")
cd ..

if test -z "$driver" || ! test -d "./drivers/$driver"; then
  /usr/bin/logger -p daemon.err -t %%PORTNAME%%/enable_sim "invalid driver: \"$driver\""
  exit 1
fi

iccid=$("./drivers/$driver/get_iccid" "$@")
if test -z "$iccid"; then
  /usr/bin/logger -p daemon.err -t %%PORTNAME%%/enable_sim "ICCID retrieval failed"
  exit 1
fi

. ./config

exec 3<"$PINS_FILE"

while read id pin sim_profile <&3; do
  test "$id" = "$iccid" && break
done

exec 3<&-

if test -z "$sim_profile"; then
  /usr/bin/logger -p daemon.notice -t %%PORTNAME%%/enable_sim "ICCID $iccid is unknown"
  exit 1
fi

if "./drivers/$driver/unlock_sim" "$pin" "$@"; then
  /usr/bin/logger -p daemon.info -t %%PORTNAME%%/enable_sim "SIM enabled ($sim_profile)"
  echo "$iccid $sim_profile $driver $*" >>"$SIM_INFO_FILE"
fi
