N_TRIES=15

if test $# -lt 2; then
  /usr/bin/logger -p daemon.err -t %%PORTNAME%%/dlink/get_iccid "not enough arguments"
  exit 1
fi

device="$1"
host="$2"

i=0
%%LOCALBASE%%/bin/dlinkcontrol -qs -h "$host" iccid
result=$?
# 2 => EXIT_CODE_DEVICE_NOT_READY
while test $i -lt $N_TRIES && test $result -eq 2; do
  /bin/sleep 2
  i=$((i+1))
  %%LOCALBASE%%/bin/dlinkcontrol -qs -h "$host" iccid
  result=$?
done
