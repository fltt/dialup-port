if test $# -lt 1; then
  /usr/bin/logger -p daemon.err -t %%PORTNAME%%/ppp/unlock_sim "not enough arguments"
  exit 1
fi

pin="$1"
device_id="$2"

modem="/dev/modem$device_id"
if ! test -L "$modem"; then
  /usr/bin/logger -p daemon.err -t %%PORTNAME%%/ppp/unlock_sim "\"$modem\" does not exist"
  exit 1
fi

/usr/bin/chat TIMEOUT 5 ABORT 'CPIN: READY' ABORT ERROR '' AT OK 'AT+CPIN?' OK "AT+CPIN=\"$pin\"" OK <"$modem" >"$modem"
result=$?
msg="unknown error"
case "$result" in
  0) exit 0;;
  1) msg="bad parameters";;
  2) msg="program error";;
  3) msg="timeout";;
  4) /usr/bin/logger -p daemon.info -t %%PORTNAME%%/ppp/unlock_sim "no PIN needed"
     exit 0;;
  5) msg="invalid PIN";;
esac
/usr/bin/logger -p daemon.warning -t %%PORTNAME%%/ppp/unlock_sim "$msg"
exit 1
