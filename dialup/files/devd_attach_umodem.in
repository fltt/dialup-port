if test $# -lt 2; then
  /usr/bin/logger -p daemon.err -t %%PORTNAME%%/attach_umodem "not enough arguments"
  exit 1
fi

type="$1"
tty="/dev/cua$2"

if ! test -c "$tty"; then
  /usr/bin/logger -p daemon.err -t %%PORTNAME%%/attach_umodem "device \"$tty\" does not exist"
  exit 1
fi

if /usr/bin/readlink /dev/$type* | /usr/bin/fgrep -q "$tty"; then
  /usr/bin/logger -p daemon.err -t %%PORTNAME%%/attach_umodem "\"$tty\" already linked"
  exit 1
fi

cd $(/usr/bin/dirname "$0")

device_id=0
while test -e "/dev/$type$device_id"; do
  device_id=$((device_id+1))
done

link_file="/dev/$type$device_id"
/bin/ln -s "$tty" "$link_file" && /usr/bin/logger -p daemon.info -t %%PORTNAME%%/attach_umodem "$link_file -> $tty"

test "$type" = modem && ./enable_sim ppp "$device_id"
