SELECT_TEMP_FILE=$(/usr/bin/mktemp)

trap "rm -f \"$SELECT_TEMP_FILE\"" EXIT

cd "%%LIBEXECDIR%%"

. ./config

if ! ./dial/select_sim "$ACTIVE_SIM_FILE" "$SELECT_TEMP_FILE"; then
  /usr/bin/logger -s -p user.notice -t %%PORTNAME%%/hangup "SIM selection failed"
  exit 1
fi

iccid=$(/bin/cat "$SELECT_TEMP_FILE")

exec 3<"$SIM_INFO_FILE"

while read id sim_profile driver args  <&3; do
  test "$id" = "$iccid" && break
done

exec 3<&-

if test "$id" != "$iccid"; then
  /usr/bin/logger -s -p user.crit -t %%PORTNAME%%/hangup "ICCID \"$iccid\" not found"
  exit 1
fi

iccid_pid_file=$(printf "$MONITOR_PID_FILE" "$iccid")

if ! "./drivers/$driver/disconnect" "$iccid_pid_file" $args; then
  /usr/bin/logger -s -p user.error -t %%PORTNAME%%/hangup "disconnection failed"
  exit 1
fi
