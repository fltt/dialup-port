if test $# -lt 4; then
  /usr/bin/logger -p daemon.err -t %%PORTNAME%%/dlink/sm_write "not enough arguments"
  exit 1
fi

sm_key="$1"
text="$2"
device="$3"
host="$4"

TEMP_FILE=$(/usr/bin/mktemp)
trap "/bin/rm \"$TEMP_FILE\"" EXIT

%%LOCALBASE%%/bin/dlinkcontrol -qs -h "$host" sms list sim outbox >"$TEMP_FILE"
result=$?
if test $result -ne 0; then
  /usr/bin/logger -p daemon.warning -t %%PORTNAME%%/dlink/sm_write "could not read SMs (error code $result)"
  exit 1
fi

exec 3<"$TEMP_FILE"

while read index date time status msisdn old_text <&3; do
  test "$msisdn" = "$sm_key" && break
done

exec 3<&-

if test "$msisdn" = "$sm_key"; then
  %%LOCALBASE%%/bin/dlinkcontrol -qs -h "$host" sms delete sim outbox "$index"
  result=$?
  if test $result -ne 0; then
    /usr/bin/logger -p daemon.warning -t %%PORTNAME%%/dlink/sm_write "could not delete SM (error code $result)"
    exit 1
  fi
fi

%%LOCALBASE%%/bin/dlinkcontrol -qs -h "$host" sms store sim "$sm_key" "$text"
result=$?
if test $result -ne 0; then
  /usr/bin/logger -p daemon.warning -t %%PORTNAME%%/dlink/sm_write "could not store SM (error code $result)"
  exit 1
fi
